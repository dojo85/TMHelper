<?xml version="1.0" encoding="utf-8" ?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="false">
		<layer-list>
			<item>
				<shape>
					<gradient android:angle="270" android:startColor="@color/darkerOrange" android:endColor="@color/darkerOrange"/>
					<corners android:radius="25dp"/>
				</shape>
			</item>

		</layer-list>
	</item>

	<item android:state_pressed="true">
		<layer-list>
			<item>
				<shape>
					<gradient android:angle="270" android:startColor="@android:color/white" android:endColor="@android:color/white"/>
					<stroke android:width="0dp" android:color="@color/darkerOrange"/>
					<corners android:radius="25dp"/>
				</shape>
			</item>
		</layer-list>
	</item>

</selector>
