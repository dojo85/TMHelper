<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="13dp"
      android:layout_marginLeft="13dp"
      android:layout_marginTop="10dp"
      android:paddingHorizontal="13dp"
      android:paddingVertical="8dp"
      android:background="@drawable/custom_borders2">


		<LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
			android:layout_weight="0.9"
            android:orientation="vertical"
			android:paddingRight="8dp">

			<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

	    <TextView
		android:id="@+id/corpRowPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textStyle="bold"
		android:textColor="@color/lightGray"
        android:text="Player 1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/lightGray"
            android:text="Total Points: "
            android:layout_toLeftOf="@+id/corpRowTP" 
			/>

	    <TextView
			android:id="@+id/corpRowTP"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:textStyle="bold"
			android:textColor="@color/lightGray"
		    android:layout_alignParentEnd="true" 
		    android:text="120"
			/>

		</RelativeLayout>
		


		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
			android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
					android:layout_weight="0.3"
                    android:textColor="@color/lightGray"
                    android:text="TR:"/>

                <TextView
	                android:id="@+id/corpRowTR"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.7"
	                android:textColor="@color/lightGray"
	                android:text="50"/>
            </LinearLayout>

	        <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"

		        android:layout_weight="1">

		        <TextView
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.3"
			        android:textColor="@color/lightGray"
			        android:text="MS:"/>

		        <TextView
			        android:id="@+id/corpRowMS"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.7"
			        android:textColor="@color/lightGray"
			        android:text="5"/>
	        </LinearLayout>

	        <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"

		        android:layout_weight="1">

		        <TextView
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.3"
			        android:textColor="@color/lightGray"
			        android:text="AW:"/>

		        <TextView
			        android:id="@+id/corpRowAW"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.7"
			        android:textColor="@color/lightGray"
			        android:text="0"/>
	        </LinearLayout>
        </LinearLayout>

	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:weightSum="3">

		    <LinearLayout
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_weight="1">

			    <TextView
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="0.3"
				    android:textColor="@color/lightGray"
				    android:text="GR:"/>

			    <TextView
				    android:id="@+id/corpRowGR"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="0.7"
				    android:textColor="@color/lightGray"
				    android:text="11"/>
		    </LinearLayout>

		    <LinearLayout
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_weight="1">

			    <TextView
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="0.3"
				    android:textColor="@color/lightGray"
				    android:text="CT:"/>

			    <TextView
				    android:id="@+id/corpRowCT"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="0.7"
				    android:textColor="@color/lightGray"
				    android:text="10"/>
		    </LinearLayout>

		    <LinearLayout
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_weight="1">

			    <TextView
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="0.3"
				    android:textColor="@color/lightGray"
				    android:text="CD:"/>

			    <TextView
				    android:id="@+id/corpRowCD"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="0.7"
				    android:textColor="@color/lightGray"
				    android:text="19"/>
		    </LinearLayout>
	    </LinearLayout>


		</LinearLayout>


		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.1"
			android:orientation="vertical"
			android:layout_gravity="center_vertical">

			<ImageView
				android:src="@drawable/edit_24"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/editCorpImage"
				android:tint="@color/darkerOrange"
				android:layout_gravity="center_vertical|right"
			/>


		</LinearLayout>


		



	
</LinearLayout>
